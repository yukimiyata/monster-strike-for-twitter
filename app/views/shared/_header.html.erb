<header>
  <nav class='navbar navbar-expand-lg navigation navbar-light bg-light'>
    <%= link_to image_tag('logo.png', class: 'navbar-brand', size: '70x70'), root_url %>
    <button class='navbar-toggler' data-toggle='collapse' data-target='#navbarSupportedContent'
            aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ml-auto main-nav align-items-center'>
        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to 'モンスト募集＆一覧', '#', class: 'nav-link dropdown-toggle', data: {toggle: 'dropdown'}, aria: { haspopup: true, expanded: false} %>

          <div class='dropdown-menu dropdown-menu-right'>
            <%= link_to '募集一覧', posts_path, class: 'dropdown-item' %>
            <%= link_to '募集する', new_post_path, class: 'dropdown-item' %>
          </div>
        </li>

        <li class='nav-item'>
          <%= link_to '開発中', '#', class: 'nav-link' %>
        </li>

        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to '#', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false }, id: 'header-profile' do %>
            <%= image_tag('logo.png', class: 'rounded-circle', width: '40', height: '40') %>
          <% end %>
          <div class='dropdown-menu dropdown-menu-right'>

            <div class='dropdown-item'><%= current_user.name %></div>
            <div class='dropdown-divider'></div>
            <%= link_to 'ユーザー設定', edit_user_path(current_user), class: 'dropdown-item' %>
            <%= link_to 'ログアウト', logout_path, method: :delete, class: 'dropdown-item' %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>
