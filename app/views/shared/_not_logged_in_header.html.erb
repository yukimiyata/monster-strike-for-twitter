<header>
  <div id='header-logo-and-link'>
    <%= link_to (image_tag 'logo.png', alt: 'ページタイトル画像', id: 'page-image'), root_path %>
    <%= link_to auth_at_provider_path(provider: :twitter), id: 'header-login-link' do %>
      <i class="fab fa-twitter fa-3x"></i>
      <span id='header-login-name'>ログイン</span>
    <% end %>
  </div>
  </div>
  <div class="container">
    <h3>採用担当者様へ：<%= link_to '使い方説明', explanation_path, class: 'btn btn-primary btn-lg' %></h3>
    <p>テストユーザー１ログイン：<%= link_to "テストユーザー１", test_user1_path, class: 'btn btn-primary btn-lg' %></p>
    <p>テストユーザー２ログイン：<%= link_to "テストユーザー２", test_user2_path, class: 'btn btn-primary btn-lg' %></p>
  </div>
