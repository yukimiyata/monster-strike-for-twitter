<div class='recruiting-positions-form'>
  <div>1人目の募集</div>
  <div>
    <%= ff.label :character %>
    <%= ff.text_field :character, placeholder: '何でもOK', class: 'form-control', id: "character-number-1" %>
    <div class='input-character-info'>
      <button type='button' onclick="setCharacterValue(this)" class="1 recruit-info-customize btn btn-primary">誰でも</button>
      <button type='button' onclick="setCharacterValue(this)" class="1 recruit-info-customize btn btn-primary">適性</button>
      <button type='button' onclick="setCharacterValue(this)" class="1 recruit-info-customize btn btn-primary">ガチャ限</button>
    </div>
  </div>
  <div>
    <%= ff.label :description %>
    <%= ff.text_field :description, placeholder: '何でもOK', class: 'form-control', id: "description-number-1" %>
    <div class='input-character-info'>
      <button type='button' onclick="setDescriptionValue(this)" class="1 recruit-info-customize btn btn-danger">何でもOK</button>
      <button type='button' onclick="setDescriptionValue(this)" class="1 recruit-info-customize btn btn-danger">運極</button>
      <button type='button' onclick="setDescriptionValue(this)" class="1 recruit-info-customize btn btn-danger">超絶運極</button>
    </div>
  </div>
</div>